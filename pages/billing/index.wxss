/* pages/billing/index.wxss */
.container {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.number, .end-ride {
  flex: 2;
  width: 100%;
  text-align: center;
  padding: 30px 0;
}

.timer {
  flex: 6;
  width: 100%;
  text-align: center;
}

.end-ride {
  padding-bottom: 0;
}

.end-ride button {
  margin-top: 10rpx;
}