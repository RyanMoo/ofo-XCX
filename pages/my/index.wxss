/* pages/my/index.wxss */
.container {
  width: 100%;
  height: 100vh;
  background-color: #f2f2f2;
}

.myPic {
  width: 100%;
  height: 280rpx;
  position: relative;
  background-color: #fff;
}

.myPic image {
  position: absolute;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  box-shadow: 0 0 20rpx rgba(0,0,0, .2);
  top: 50%;
  left: 50%;
  margin-left: -90rpx;
  margin-top: -90rpx;
}

.myNickName {
  width: 100%;
  text-align: center;
  background-color: #fff;
  padding: 80rpx 0 30rpx;
  font-size: 32rpx;
  font-weight: 700;
}

.myWallet {
  display: flex;
  padding: 30rpx;
  margin-top: 100rpx;
  background-color: #fff;
  font-size: 32rpx;
  justify-content: space-between;
}

.btn-login {  
  width: 100%;
  position: absolute;
  bottom: 50rpx;
}

.btn-login button {
  width: 90%;
}