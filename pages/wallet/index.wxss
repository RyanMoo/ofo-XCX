/* pages/wallet/index.wxss */
.head {
  width: 100%;
  height: 400rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}

.title {
  font-size: 28rpx;
}

.money {
  font-size: 100rpx;
  font-weight: 900;
}

.explain {
  font-size: 28rpx;
  padding: 0rpx 20rpx;
  border: 1px solid #000;
  border-radius: 40rpx;
}


.recharge {
  background-color: #f2f2f2;
  padding: 40rpx;
}
.recharge button {
  background-color: #b9dd08;
  font-weight: 900;
}

.ticket, .deposit {
  display: flex;
  padding: 30rpx;
  background-color: #fff;
  font-size: 32rpx;
  justify-content: space-between;
}

.deposit {
  border-top: 1px solid #f2f2f2;
}

.deposit text:nth-child(2) {
  
  color: #99dd00;
}

.bottom {
  display: flex;
  padding: 30rpx;
  margin-top: 100rpx;
  background-color: #fff;
  font-size: 32rpx;
  justify-content: space-between;
}

